@model crud_registration_web_system.Models.PowerPlant

@{
    ViewData["Title"] = "Excluir Usina";
}

<h1>Excluir Usina</h1>

<h3>Deseja excluir esta usina?</h3>
<div>
    <h4>Informações da Usina</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Active)
        </dt>
        <dd class = "col-sm-10">
            <label class="switch">
                @Html.DisplayFor(model => model.Active)
                <div class="slider round"></div>
            </label>
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Supplier)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Supplier)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ConsumerUnit)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ConsumerUnit)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Excluir" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar</a>
    </form>
</div>
