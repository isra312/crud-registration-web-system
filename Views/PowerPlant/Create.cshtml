@model crud_registration_web_system.Models.PowerPlant

@{
    ViewData["Title"] = "Criar Usina";
}

@{
   List<SelectListItem> listItems = new List<SelectListItem>();
   listItems.Add(new SelectListItem
        {
          Text = "SOLARIAN",
          Value = "SOLARIAN"
        });
   listItems.Add(new SelectListItem
        {
            Text = "FUTURA",
            Value = "FUTURA",
            Selected = true
        });
   listItems.Add(new SelectListItem
        {
            Text = "CENTRAL GERADORA FAZENDA MODELO",
            Value = "CENTRAL GERADORA FAZENDA MODELO"
        });
           listItems.Add(new SelectListItem
        {
          Text = "NOVA MUNDO",
          Value = "NOVA MUNDO"
        });
   listItems.Add(new SelectListItem
        {
            Text = "SOLARE",
            Value = "SOLARE",
            Selected = true
        });
   listItems.Add(new SelectListItem
        {
            Text = "UNISOL",
            Value = "UNISOL"
        });
}

<h1>Criar Usina</h1>

<h4>Insira os dados da Usina</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group form-check">
                @Html.DisplayNameFor(model => model.Active)  
                <label class="switch">
                    <input type="checkbox" class="form-check-input switch" asp-for="Active" checked >
                    <span class="slider round"></span>
                </label>  
            </div>
            <div class="form-group">
                <label asp-for="Supplier" class="control-label"></label>
                @Html.DropDownListFor(model => model.Supplier, listItems, "-- Selecione o Fornecedor --")
            </div>
            <div class="form-group">
                <label asp-for="ConsumerUnit" class="control-label"></label>
                <input asp-for="ConsumerUnit" class="form-control" />
                <span asp-validation-for="ConsumerUnit" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
