@model crud_registration_web_system.Models.PowerPlant

@{
    ViewData["Title"] = "Editar Usina";
}

<h1>Edit</h1>

<h4>PowerPlant</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Supplier" class="control-label"></label>
                <input asp-for="Supplier" class="form-control" />
                <span asp-validation-for="Supplier" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConsumerUnit" class="control-label"></label>
                <input asp-for="ConsumerUnit" class="form-control" />
                <span asp-validation-for="ConsumerUnit" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="switch">
                    <input type="checkbox" class="form-check-input switch" asp-for="Active">
                    <span class="slider round"></span>
                     @Html.DisplayNameFor(model => model.Active)  
                </label>  
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
